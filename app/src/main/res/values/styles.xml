<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/kolorTekstu</item>
        <item name="android:editTextColor">@color/kolorNiedowaga</item>
        <item name="android:editTextStyle">@color/kolorOtylosc2</item>

    </style>


    <style name="EditText">
        <!--<item name="android:width">20dp</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:textCursorDrawable">@drawable/kursor_edittext</item>
        <item name="backgroundTint">@android:color/holo_green_dark</item>


    </style>

    <style name="PoleWskaznika">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CardViewStyl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="app:cardCornerRadius">10dp</item>-->
        <item name="android:layout_marginTop">@dimen/marginesCardView</item>

    </style>

    <style name="Wynik">
        <item name="android:paddingBottom">@dimen/paddingWynik</item>
        <item name="android:paddingTop">@dimen/paddingWynik</item>
        <item name="android:paddingLeft">@dimen/marginesPolaWskaznika</item>
        <item name="android:paddingRight">@dimen/marginesPolaWskaznika</item>

    </style>

</resources>