<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tlo"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.anddev.kalkulatorbmi.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <android.support.v7.widget.CardView
        android:id="@+id/wprowadzanieDanychLineraLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tabela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView"
                    android:layout_column="0"
                    android:autoSizeTextType="uniform"
                    android:text="@string/age" />

                <EditText
                    android:id="@+id/wiekEditText"
                    android:layout_column="1"
                    android:autoSizeTextType="uniform"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="3"

                    />

                <Button
                    android:id="@+id/button"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"

                    android:text="K" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"

                    android:text="M" />

            </TableRow>


            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="0"

                    android:text="@string/height" />

                <EditText
                    android:id="@+id/wzrostEditText"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="numberDecimal"

                    android:maxLength="5" />
            </TableRow>


            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_column="0"

                    android:text="@string/weight" />

                <EditText
                    android:id="@+id/wagaEditText"
                    android:layout_column="1"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="5" />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/wprowadzanieDanychLineraLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bmiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="BMI = 30"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="@dimen/marginesPolaWskaznika"
                android:paddingRight="@dimen/marginesPolaWskaznika">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wysokoscPolaWskaznika"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/kolorNiedowaga" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/kolorWagaWlasciwa" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/kolorNadwaga" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/kolorOtylosc1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/kolorOtylosc2" />

                </LinearLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wysokoscWskaznika"
                    android:layout_centerInParent="true"
                    android:progress="30"
                    android:progressDrawable="@null"
                    android:thumb="@drawable/wskaznik"
                    android:thumbOffset="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
